@model IEnumerable<WebAppStudent.Models.Course>

@{
    ViewData["Title"] = "Daftar Course";
}

<h2>Daftar Course</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tambah Course</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nama</th>
            <th style="width: 200px;">Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>