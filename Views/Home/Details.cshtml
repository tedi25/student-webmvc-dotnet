@model WebAppStudent.Models.Student

@{
    ViewData["Title"] = "Detail Student";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Detail Student</h4>
                </div>

                <div class="card-body">

                    <!-- BASIC INFO -->
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Nama</div>
                        <div class="col-md-8 fw-semibold">@Model.Name</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Email</div>
                        <div class="col-md-8">@Model.Email</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 text-muted">Usia</div>
                        <div class="col-md-8">@Model.Age tahun</div>
                    </div>

                    <hr />

                    <!-- COURSES -->
                    <h6 class="mb-3 text-uppercase text-secondary">
                        Course yang Diambil
                    </h6>

                    @if (Model.StudentCourses.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var sc in Model.StudentCourses)
                            {
                                <span class="badge bg-primary px-3 py-2">
                                    @sc.Course.CourseName
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            Student ini belum mengambil course apa pun.
                        </div>
                    }

                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        Kembali
                    </a>

                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        Edit Student
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>