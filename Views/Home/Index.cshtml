@model IEnumerable<WebAppStudent.Models.Student>

@{
    ViewData["Title"] = "Student Landing Page";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="fw-bold">Students</h1>
            <p class="text-muted">Daftar siswa beserta course yang diambil</p>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var student in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold">
                            @student.Name
                        </h5>

                        <p class="card-text text-muted mb-2">
                            @student.Email
                        </p>

                        <p class="mb-3">
                            <span class="badge bg-secondary">
                                Age: @student.Age
                            </span>
                        </p>

                        <div class="mb-3">
                            @if (student.StudentCourses != null && student.StudentCourses.Any())
                            {
                                @foreach (var sc in student.StudentCourses)
                                {
                                    <span class="badge bg-primary me-1 mb-1">
                                        @sc.Course.CourseName
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">
                                    No course assigned
                                </span>
                            }
                        </div>

                        <div class="mt-auto">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@student.Id"
                                class="btn btn-outline-primary btn-sm w-100">
                                Detail
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>