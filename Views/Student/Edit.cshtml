@model WebAppStudent.ViewModels.StudentCourseBaseVM

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Courses</label>
        @foreach (var course in Model.Courses)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedCourseIds" value="@course.Id"
                    checked="@(Model.SelectedCourseIds.Contains(course.Id))" />
                <label class="form-check-label">@course.CourseName</label>
            </div>
        }
        <span asp-validation-for="SelectedCourseIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}